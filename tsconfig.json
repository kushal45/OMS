{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/*": [
        "apps/*"
      ],
      "@lib/*": [
        "libs/*"
      ],
      "@lib/redis-client": [ // New path alias
        "libs/redis-client/src"
      ],
      "@lib/redis-client/*": [ // New path alias
        "libs/redis-client/src/*"
      ],
      "@app/config": [
        "libs/config/src"
      ],
      "@app/config/*": [
        "libs/config/src/*"
      ],
      "@app/address": [
        "libs/address/src"
      ],
      "@app/address/*": [
        "libs/address/src/*"
      ],
      "@app/databaseMigration/*": [
        "apps/database/migrations/*"
      ],
      "@libs/http": [
        "libs/http"
      ],
      "@libs/constants": [
        "libs/constants"
      ],
      "@libs/swagger": [
        "libs/swagger"
      ],
      "@libs/dtos": [
        "libs/dtos"
      ],
      "@app/log": [
        "libs/logger/src"
      ],
      "@app/log/*": [
        "libs/logger/src/*"
      ]
    }
  }
}