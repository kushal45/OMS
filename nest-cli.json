{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "monorepo": true,
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      },
      "assets": [
    { "include": "proto/*.proto", "outDir": "proto" },
    { "include": "apps/auth/.env", "outDir": "./" },
    { "include": "apps/auth/.env.example", "outDir": "./" }
      ]
    },
    "order": {
      "type": "application",
      "root": "apps/order",
      "entryFile": "main",
      "sourceRoot": "apps/order/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order/tsconfig.app.json"
      },
      "assets": [
    { "include": "proto/*.proto", "outDir": "proto" },
    { "include": "apps/order/.env", "outDir": "./" },
    { "include": "apps/order/.env.example", "outDir": "./" }
      ]
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      },
      "assets": [
    { "include": "proto/*.proto", "outDir": "src/proto" },
    { "include": "apps/api-gateway/.env", "outDir": "./" },
    { "include": "apps/api-gateway/.env.example", "outDir": "./" }
      ]
    },
    "address": {
      "type": "library",
      "root": "libs/address",
      "entryFile": "index",
      "sourceRoot": "libs/address/src",
      "compilerOptions": {
        "tsConfigPath": "libs/address/tsconfig.lib.json"
      }
    },
    "inventory": {
      "type": "application",
      "root": "apps/inventory",
      "entryFile": "main",
      "sourceRoot": "apps/inventory/src",
      "compilerOptions": {
        "tsConfigPath": "apps/inventory/tsconfig.app.json"
      },
      "assets": [
    { "include": "proto/*.proto", "outDir": "proto" },
    { "include": "apps/inventory/.env", "outDir": "./" },
    { "include": "apps/inventory/.env.example", "outDir": "./" }
      ]
    },
    "product": {
      "type": "application",
      "root": "apps/product",
      "entryFile": "main",
      "sourceRoot": "apps/product/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product/tsconfig.app.json"
      },
      "assets": [
    { "include": "proto/*.proto", "outDir": "proto" },
    { "include": "apps/product/.env", "outDir": "./" },
    { "include": "apps/product/.env.example", "outDir": "./" }
      ]
    },
    "logger": {
      "type": "library",
      "root": "libs/logger",
      "entryFile": "index",
      "sourceRoot": "libs/logger/src",
      "compilerOptions": {
        "tsConfigPath": "libs/logger/tsconfig.lib.json"
      }
    },
    "cart": {
      "type": "application",
      "root": "apps/cart",
      "entryFile": "main",
      "sourceRoot": "apps/cart/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cart/tsconfig.app.json"
      },
      "assets": [
    { "include": "proto/*.proto", "outDir": "proto" },
    { "include": "apps/cart/.env", "outDir": "./" },
    { "include": "apps/cart/.env.example", "outDir": "./" }
      ]
    }
  }
}